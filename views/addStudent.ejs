    <div class="container mt-5">
        <div>
            <h1 class="heading" id="add-heading">ADD STUDENT</h1>
        </div>

        <a href="/dashboard/manage-student" class="btn_back"> <i class="bi bi-arrow-left-circle"></i> &nbsp; Back </a>

        <form action="/dashboard/update" method="post" enctype="multipart/form-data" class="mt-5">
            <div class="row">
                <div class="details form-group col-lg-4">
                    <label for="first_name" class="label">Upload Image Here</label>
                    <input class="form-control" type="file" name="uploaded_image" accept=""/>
                </div> 
                <div class="details form-group col-lg-4">
                    <label for="first_name" class="label">First Name</label>
                    <input type="text" class="form-control" id="first_name" name="first_name" placeholder="Enter First Name">
                </div>
                <div class="details form-group col-lg-4">
                    <label for="last_name" class="label">Last Name</label>
                    <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Enter Last Name">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xl-12">
                    <label for="adress" class="other-label">Address</label>
                    <input type="text" class="form-control" id="address" name="address" placeholder="Enter Address">
                </div>
            </div>
        
            <div class="row">
                <div class="form-group col-lg-3">
                    <label for="gender" class="other-label">Gender</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gender" id="gender" value="Female">
                        <label class="form-check-label" for="inlineRadio1">Female</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="gender" id="gender" value="Male">
                        <label class="form-check-label" for="inlineRadio2">Male</label>
                    </div>
                </div>
                <div class="form-group col-lg-4">
                    <label for="dob" class="other-label">Date of Birth</label>
                    <input type="date" class="form-control" id="dob" name="dob">
                </div>
                <div class="form-group col-lg-5">
                    <label for="email" class="other-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email">
                </div>
            </div>
            <input type="submit" class="btn_save" value="Save Changes" id="save">
        </form>
    </div>
</body>
